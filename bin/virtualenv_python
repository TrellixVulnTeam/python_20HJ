#!/bin/bash -x

ENVDIR=~/git/python/env/.lpvenv
# Set up virtual env for Python3
#echo "The first arg is $0"

if  [ "$0" != '-bash' ] ; then
    echo "USAGE : . $0"
    echo "Aborting..."
    exit 1
fi

if [ ! -d  $ENVDIR ]; then
    # If virtual env isn't working, delete the ..../.lpvenv 
    # then rerun the line below
    virtualenv  -p $( which /usr/local/bin/python3 ) $ENVDIR
fi

. $ENVDIR/bin/activate

python -V

echo ""
echo "Type 'deactivate' to remove virtual environment"
